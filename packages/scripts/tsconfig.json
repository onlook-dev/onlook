{
    "extends": "@onlook/typescript/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}