{
    "name": "@onlook/scripts",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "bun build src/index.ts --outdir=dist --target=node",
        "dev": "tsc --watch",
        "start": "bun run build && node dist/index.js",
        "test": "bun test",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --max-warnings 0",
        "format": "eslint --fix ."
    },
    "bin": {
        "env": "dist/index.js"
    },
    "dependencies": {
        "chalk": "^5.6.0",
        "commander": "^14.0.0",
        "ora": "^8.2.0",
        "prompts": "^2.4.2",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@onlook/eslint": "*",
        "@onlook/typescript": "*",
        "@types/bun": "^1.3.0",
        "eslint": "^9.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.7.2",
        "@types/prompts": "^2.4.9",
        "jest": "^30.0.5",
        "typescript": "^5.8.2"
    }
}
