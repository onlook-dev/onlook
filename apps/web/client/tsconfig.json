{
    "extends": "@onlook/typescript/next-react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "allowArbitraryExtensions": true,
        "paths": {
            "@/*": ["./src/*"],
            "/*": ["./*"],
            "~/*": ["./src/*"]
        }
    },
    "include": [
        "src",
        "test",
        "next-env.d.ts",
        "next.config.ts",
        ".next/types/**/*.ts",
        "messages/en.d.json.ts"
    ],
    "exclude": ["node_modules", ".next"]
}
