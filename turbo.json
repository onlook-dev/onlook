{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": ["**/.env"],
    "ui": "stream",
    "tasks": {
        "topo": {
            "dependsOn": ["^topo"]
        },
        "build": {
            "env": ["VITE_SUPABASE_ANON_KEY", "VITE_SUPABASE_API_URL", "VITE_MIXPANEL_TOKEN", "VITE_ANTHROPIC_API_KEY"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "dependsOn": ["^build"],
            "outputs": ["dist-electron/**"]
        },
        "start": {
            "cache": false
        },
        "test": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "db:gen": { "env": ["PROJECT_ID"], "cache": false },
        "dev": {
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": ["^topo"]
        },
        "typecheck": {
            "dependsOn": ["^topo"],
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        }
    }
}
